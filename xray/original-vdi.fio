[global]
ioengine=libaio
direct=1
norandommap
time_based
group_reporting
disk_util=0
continue_on_error=all
rate_process=poisson

[vdi-read]
filename=/dev/sdb
# bs must match the smallest block size in bssplit
bs=8k
bssplit=8k/90:32k/10
size=8G
rw=randread
rate_iops=10
iodepth=8
percentage_random=80

[vdi-write]
filename=/dev/sdb
bs=32k
size=2G
offset=8G
rw=randwrite
rate_iops=10
percentage_random=20
